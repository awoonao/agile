      <h1>Create a New Recipe</h1>
      <form
        action="/recipes/create-recipe"
        method="POST"
        enctype="multipart/form-data"
      >
        <!-- Recipe Title -->
        <label for="title">Recipe Title:</label>
        <input type="text" id="title" name="title" required /><br /><br />

        <!-- Recipe Image -->
        <input type="file" name="image" accept="image/*" id="imageUpload" />
        <br />
        <!-- Image Preview -->
        <img id="imagePreview" src="" alt="Preview" />

        <br />

        <!-- Recipe Description -->
        <label for="description">Description:</label><br />
        <textarea
          id="description"
          name="description"
          rows="4"
          cols="50"
        ></textarea
        ><br /><br />

        <!-- Ingredients -->
        <label>Ingredients:</label>
        <div id="ingredients-container">
          <input
            type="text"
            name="ingredients[]"
            placeholder="Enter ingredient"
            required
          />
        </div>

        <button type="button" onclick="addIngredient()">Add Ingredient</button
        ><br />
        <button type="button" onclick="removeIngredient()">
          Remove Ingredient</button
        ><br /><br />

        <!-- Instructions -->
        <label>Instructions:</label>
        <div id="instructions-container">
          <input
            type="text"
            name="instructions[]"
            placeholder="Enter instruction step"
            required
          />
        </div>
        <button type="button" onclick="addInstruction()">Add Instruction</button
        ><br />
        <button type="button" onclick="removeInstruction()">
          Remove Instruction</button
        ><br /><br />

        <br /><br />

        <!-- servings -->
        <label for="servings">Servings:</label>
        <input type="text" id="servings" name="servings" /><br /><br />

        <!-- prep time -->
        <label for="prep_time">Prep Time:</label>
        <input
          type="text"
          id="prep_time"
          name="prep_time"
          required
        /><br /><br />
        <!-- yield -->
        <label for="yield">Yield:</label>
        <input type="text" id="yield" name="yield" required /><br /><br />
        <!-- cook time -->
        <label for="cook_time">Cook Time:</label>
        <input
          type="text"
          id="cook_time"
          name="cook_time"
          required
        /><br /><br />

        <button type="submit">Submit Recipe</button>
        <button type="button" onclick="history.back()">Back</button>
      </form>
