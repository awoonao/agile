  </header>
  <main>

    <h1>Create a New Recipe</h1>

    <form class="recipe-container" action="/recipes/create-recipe" method="POST" enctype="multipart/form-data">
      <!-- Recipe Title -->
      <div class="title">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required />
      </div>

      <!-- Recipe Description -->
      <div class="description">
        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4" cols="60"></textarea>
      </div>


      <div class="image">
        <label for="image">Photo Here:</label><br>
        <div class="image-container">
          <!-- Image Preview -->
          <!-- <a href="https://www.flaticon.com/free-icons/image-placeholder" title="image placeholder icons">Image placeholder icons created by Graphic Nehar - Flaticon</a> -->
          <img id="imagePreview" src="/images/imagePreview.png" alt="Preview" />
          <!-- Recipe Image -->
          <input type="file" name="image" accept="image/*" id="imageUpload" />
        </div>
      </div>


      <!-- Ingredients -->
      <div class="ingredient">
        <label>Ingredients:</label>
        <div id="ingredients-container">
          <input type="text" name="ingredients[]" placeholder="Enter ingredient" required />
        </div>

        <button type="button" onclick="addIngredient()">Add Ingredient</button>
        <button type="button" onclick="removeIngredient()">
          Remove Ingredient</button>
      </div>



      <!-- Instructions -->
      <div class="instruction">
        <label>Instructions:</label>
        <div id="instructions-container">
          <input type="text" name="instructions[]" placeholder="Enter instruction step" required />
        </div>
        <button type="button" onclick="addInstruction()">Add Instruction</button>
        <button type="button" onclick="removeInstruction()">
          Remove Instruction</button>
      </div>


      <div class="details">
        <!-- servings -->
        <label for="servings">Servings:</label>
        <input type="text" id="servings" name="servings" />

        <!-- prep time -->
        <label for="prep_time">Prep Time:</label>
        <input type="text" id="prep_time" name="prep_time" required />
        <!-- yield -->
        <label for="yield">Yield:</label>
        <input type="text" id="yield" name="yield" required />
        <!-- cook time -->
        <label for="cook_time">Cook Time:</label>
        <input type="text" id="cook_time" name="cook_time" required />
      </div>
      <button type="submit">Submit Recipe</button>
      <button type="button" onclick="history.back()">Back</button>
    </form>
    </div>
