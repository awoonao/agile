<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Recipe</title>

    <script src="/js/createRecipe-script.js"></script>
  </head>

  <body>
    <h1>Create a New Recipe</h1>
    <form action="/recipes/create-recipe" method="POST">
      <!-- Recipe Title -->
      <label for="title">Recipe Title:</label>
      <input type="text" id="title" name="title" required /><br /><br />

      <!-- Recipe Image -->
      <input type="file" name="image" accept="image/*" id="imageUpload" />
      <br />
      <!-- Image Preview -->
      <img id="imagePreview" src="" alt="" />

      <br />

      <!-- Recipe Description -->
      <label for="description">Description:</label><br />
      <textarea
        id="description"
        name="description"
        rows="4"
        cols="50"
      ></textarea
      ><br /><br />

      <!-- Ingredients -->
      <label>Ingredients:</label>
      <div id="ingredients-container">
        <input
          type="text"
          name="ingredients[]"
          placeholder="Enter ingredient"
          required
        />
      </div>

      <button type="button" onclick="addIngredient()">Add Ingredient</button
      ><br />
      <button type="button" onclick="removeIngredient()">
        Remove Ingredient</button
      ><br /><br />

      <!-- Instructions -->
      <label>Instructions:</label>
      <div id="instructions-container">
        <input
          type="text"
          name="instructions[]"
          placeholder="Enter instruction step"
          required
        />
      </div>
      <button type="button" onclick="addInstruction()">Add Instruction</button
      ><br />
      <button type="button" onclick="removeInstruction()">
        Remove Instruction</button
      ><br /><br />

      <button type="submit">Submit Recipe</button>
    </form>
  </body>
</html>
