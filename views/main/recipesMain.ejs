<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/recipeMain.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>Recipes</title>
  </head>
  <body>
    <header>
      <nav>
        <h1>Recipes</h1>
        <a href="/recipes">Recipes</a>

        <!-- //change this in the future -->
        <div class="w3-dropdown-hover">
            <button class="w3-button w3-black">My Account!</button>
            <div class="w3-dropdown-content w3-bar-block w3-border">
              <a href="recipes/create-recipe" class="w3-bar-item w3-button">Create New Recipe</a>
              <a href="#" class="w3-bar-item w3-button">Link 2</a>
              <a href="#" class="w3-bar-item w3-button">Link 3</a>
            </div>
          </div>

        <a href="/about">About Us</a>
      </nav>
    </header>
    <main>
      <div id="recipes-list">
        <% if (typeof recipes !== 'undefined' && recipes && recipes.length > 0) { %>
          <% recipes.forEach(recipe => { %>
            <a href="/recipes/<%= recipe.recipe_id %>"><div class="recipe-container">
              <h2><%= recipe.title %></h2>
              <p><strong>Description:</strong> <%= recipe.description %></p>
              <p><strong>Author:</strong> <%= recipe.author %></p>
              <% if (recipe.image_url) { %>
                <img src="<%= recipe.image_url %>" alt="<%= recipe.title %>" width="200">
              <% } %>
         </div></a>
          <% }); %>
        <% } else { %>
          <p>No recipes found.</p>
        <% } %>
      </div>
    </main>
    
    <footer></footer>
  </body>
</html>
